<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Background="LightGray" WindowStartupLocation="CenterScreen">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="450"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Name="MainF" Source="Pages/AuthPage.xaml" NavigationUIVisibility="Hidden" Margin="0,0,0,0" Grid.Row="1" Navigated="MainF_Navigated"/>
        <Button Name="BackBut" Content="Назад" FontSize="20" Margin="10,0,0,0" VerticalAlignment="Center" Height="auto" Width="148" Click="BackBut_Click" HorizontalAlignment="Left"/>
    </Grid>
</Window>
